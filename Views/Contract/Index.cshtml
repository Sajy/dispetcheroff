
@using mvc2.Models.Grids

@model IEnumerable<ContractGridModel>


<script type="text/javascript">
 		
@if (TempData["UserMessage"] != null) {
	<text>
	$(document).ready(function () {
		$('#alert1').modal();
	});
	</text>
}

</script>

@Html.Partial("InfoDialog")

<div class="row">
<div class="col-sm-5"><h1><b>Наши предложения<br><small> закупка и поставка зерновых</small></b></h1></div>
<div class="col-sm-3"><h1><img class="img-rounded" src="~/Images/contract2.gif" height="100" width="170"></h1></div>
<h1>
@Html.Partial("Banner1")</h1>
</div>


<hr>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "signupform" })) {

@Html.ActionLink("+ Добавить контракт","Create","Contract", null, new{@class="btn btn-success btn-lg" })<br><br>
}





<table class="table table-hover">
<th>№</th>
<th>@Html.DisplayNameFor(model => model.Text).ToString()</th>
<th></th>
<th></th>

@foreach (ContractGridModel d in Model)
{
<tr>
<td>@Html.DisplayFor(modelItem => d.Id)</td>
<td>@Html.DisplayFor(modelItem => d.Text)</td>

<td>
<a title="Удалить контракт" class="btn btn-danger btn-xs" onclick="return confirm('Вы уверены что хотите полностью удалить объявление?');" href="@Url.Action("Delete", "Contract", new {id=d.Id})" role="button"><span class="glyphicon glyphicon-remove"></span></a>
</td>
<td>
<a title="Редактировать контракт" class="btn btn-primary btn-xs" href="@Url.Action("Edit", "Contract", new {id=d.Id})" role="button"><span class="glyphicon glyphicon-edit"></span></a>
</td>

</tr>
}
</table>