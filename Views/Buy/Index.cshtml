
@using mvc2.Models.Grids

@model IEnumerable<BuyGridModel> 

<script type="text/javascript">
 		
@if (TempData["UserMessage"] != null) {
	<text>
	$(document).ready(function () {
		$('#alert1').modal();
	});
	</text>
}
</script>

@Html.Partial("InfoDialog")

<div class="row">
<div class="col-sm-5"><h1><b>Объявления о закупке<br><small> сельскохозяйственной продукции</small></b></h1></div>
<div class="col-sm-3"><h1><img class="img-rounded" src="~/Images/thumb3.gif" height="100" width="170"></h1></div>
<h1>	@Html.Partial("Banner1")</h1>


</div>


<hr>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "signupform" })) {

@Html.ActionLink("+ Добавить объявление","Create","Buy", null, new{@class="btn btn-success btn-lg" })<br><br>






}
</br>

<div class="table-responsive">
<table class="table table-hover">
<th>№</th>



<th>@Html.DisplayNameFor(model => model.ProductName).ToString()</th>
<th>@Html.DisplayNameFor(model => model.ProductType).ToString()</th>
<th>@Html.DisplayNameFor(model => model.ProductQuality).ToString()</th>
<th>@Html.DisplayNameFor(model => model.Department).ToString()</th>
<th>@Html.DisplayNameFor(model => model.HoldArea).ToString()</th>
<th>@Html.DisplayNameFor(model => model.MinAmount).ToString()</th>
<th>@Html.DisplayNameFor(model => model.Price).ToString()</th>
<th>@Html.DisplayNameFor(model => model.Date).ToString()</th>
<th>@Html.DisplayNameFor(model => model.Tel).ToString()</th>
<th></th>
<th></th>
@foreach (BuyGridModel d in Model)
{
<tr>
<td>@Html.DisplayFor(modelItem => d.Id)</td>
<td>@Html.DisplayFor(modelItem => d.ProductName)</td>
<td>@Html.DisplayFor(modelItem => d.ProductType)</td>
<td>@Html.DisplayFor(modelItem => d.ProductQuality)</td>
<td>@Html.DisplayFor(modelItem => d.Department)</td>
<td>@Html.DisplayFor(modelItem => d.HoldArea)</td>
<td>@Html.DisplayFor(modelItem => d.MinAmount)</td>
<td>@Html.DisplayFor(modelItem => d.Price)</td>
<td>@Html.DisplayFor(modelItem => d.Date)</td>
<td>@Html.DisplayFor(modelItem => d.Tel)</td>
<td>
<a title="Удалить объявление" class="btn btn-danger btn-xs" onclick="return confirm('Вы уверены что хотите полностью удалить объявление?');" href="@Url.Action("Delete", "Buy", new {id=d.Id})" role="button"><span class="glyphicon glyphicon-remove"></span></a>
</td>
<td>
<a title="Редактировать объявление" class="btn btn-primary btn-xs" href="@Url.Action("Edit", "Buy", new {id=d.Id})" role="button"><span class="glyphicon glyphicon-edit"></span></a>
</td>

</tr>
}
</table>


</div>
